<h1>Reviews for <%= link_to @movie.title, @movie %>.</h1>

<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= render 'shared/stars', percent: review.stars_as_percent %>

      <p>
        <%= link_to review.name, edit_movie_review_path(@movie, review) %>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>
      </p>
      <p>
        <%= review.comment %>
      </p>
      <p>
        <%#= link_to 'Edit', edit_movie_review_path(@movie, review), class: "button" %>
        <%#= link_to 'Delete', movie_review_path(@movie, review), class: "button", method: :delete, data: {confirm: "Do you really want to delete this review?"} %>
      </p>
    </li>
  <% end %>
</ul>


