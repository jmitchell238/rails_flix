<section class="movie-details">
  <div class="image">
    <%= image_tag @movie.image_file_name %>
  </div>
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
    </h2>
    <div class="reviews">
      =-'<%= render 'shared/stars', percent: @movie.average_stars_as_percent %>
      <%= link_to pluralize(@movie.reviews.size, "review"), movie_reviews_path(@movie) %>
    </div>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
    <br><br>
    <div>
      <h2>New Review for <%= @movie.title %></h2>
      <%= render 'reviews/form' %>
    </div>

    <%#= link_to "Write Review", new_movie_review_path(@movie), class: "review" %>
    
  </div>
</section>

<section class="admin">

  <%= link_to 'Edit', edit_movie_path, class: "button" %>
  <%= link_to 'Delete', @movie, class: "button", method: :delete,
              data: {confirm: "Do you really want to delete this movie?"} %>
</section>
